// initial settings derived from https://dev.to/youssefzidan/configuring-eslint-in-react-with-prettier-react-testing-library-jest-and-airbnb-2hi
// slight mods due to https://dev.to/ivadyhabimana/setup-jest-and-react-testing-library-in-a-react-project-a-step-by-step-guide-1mf0
{
  "root": true,
  "settings": {},
  "env": {
    "browser": true, // Enables browser globals like window and document
    "amd": true, // Enables require() and define() as global variables as per the amd spec.
    "node": true, // Enables Node.js global variables and Node.js scoping.
    "jest/globals": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2020, // Use the latest ecmascript standard
    "sourceType": "module", // Allows using import/export statements
    "ecmaFeatures": {
      "jsx": true // Enable JSX since we're using React
    }
  },
  "extends": ["airbnb", "prettier", "plugin:testing-library/react", "plugin:jest/recommended"],
  "plugins": ["prettier", "react", "react-hooks", "testing-library", "jest"],
  "rules": {
    "prettier/prettier": ["warn", {}, { "usePrettierrc": true }], // Use .prettierrc file as source
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }], // To allow importing .jsx files
    "no-console": 1,
    "no-unused-vars": 1,
    "import/no-unresolved": 2,
    "no-undefined": 2,
    "react/jsx-uses-vars": 2,
    // from here are the ones i had to turn off to get the current code to run.. will come back and fix
    "camelcase": 0,
    "arrow-body-style": 0,
    "jsx-a11y/label-has-associated-control": 0,
    "eqeqeq": 0,
    "import/order": 0,
    "object-shorthand": 0,
    "prefer-const": 0,
    "spaced-comment": 0,
    "react/jsx-curly-brace-presence": 0,
    "react/no-unescaped-entities": 0,
    "import/no-useless-path-segments": 0,
    "react/react-in-jsx-scope": 0,
    "react/destructuring-assignment": 0,
    "react/prop-types": 0,
    "react/button-has-type": 0,
    "react/self-closing-comp": 0,
    "import/no-duplicates": 0,
    "import/newline-after-import": 0,
    "consistent-return": 0,
    "no-else-return": 0,
    "no-shadow": 0,
    "prefer-template": 0,
    "react/no-unknown-property": 0,
    "react/jsx-no-useless-fragment": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "default-case": 0,
    "no-unreachable": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "no-empty": 0,
    "prefer-arrow-callback": 0,
    "no-var": 0

    // add more rules here...
  }
}
