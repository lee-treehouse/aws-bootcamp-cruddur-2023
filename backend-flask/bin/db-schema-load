#! /bin/bash
# shellcheck disable=all

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-schema-load"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

if [ "$1" = "PROD" ]; then
    echo "USING PROD"
    CON_URL=$PRODUCTION_CONNECTION_URL
else
    echo "USING LOCAL"
    CON_URL=$CONNECTION_URL
fi

SCHEMA_PATH=$(realpath ".")/db/schema.sql
echo "$SCHEMA_PATH"

psql "$CON_URL" <"$SCHEMA_PATH"
