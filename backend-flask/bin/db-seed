#! /bin/bash
## shellcheck disable=all

#echo "== db-schema-load"

if [ "$1" = "PROD" ]; then
    echo "USING PROD"
    CON_URL=$PRODUCTION_CONNECTION_URL
else
    echo "USING LOCAL"
    CON_URL=$CONNECTION_URL
fi

SCHEMA_PATH=$(realpath ".")/db/seed.sql

echo "$SCHEMA_PATH"

psql "$CON_URL" <"$SCHEMA_PATH"
